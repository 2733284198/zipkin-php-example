{
    "name": "openzipkin/zipkin-php-example",
    "require": {
        "monolog/monolog": "^1.23",
        "guzzlehttp/guzzle": "^6.3",
        "jcchavezs/zipkin": "~1.2.2",
        "symfony/http-foundation": "3.4.x-dev",
        "jcchavezs/zipkin-reporter-kafka": "dev-master"
    },
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "José Carlos Chávez",
            "email": "jcchavezs@gmail.com"
        }
    ],
    "scripts": {
        "run-frontend": "php -S '127.0.0.1:8081' frontend.php",
        "run-backend": "php -S '127.0.0.1:9000' backend.php",
        "run-zipkin": "DOCKER_KAFKA_HOST=$(ipconfig getifaddr en0) docker-compose up -d"
    }
}
